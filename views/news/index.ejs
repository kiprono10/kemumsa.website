                                        <a href="/news/<%= article._id %>/edit" class="btn" style="background-color: #28a745;">Edit</a>
                                        <form action="/news/<%= article._id %>?_method=DELETE" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this article?')">
                                            <button type="submit" class="btn" style="background-color: #dc3545;">Delete</button>
                                        </form>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="news-card">
                        <div class="news-content">
                            <h3>No News Articles Found</h3>
                            <p>There are currently no published articles. Check back later!</p>
                            <% if (user && user.role === 'admin') { %>
                                <a href="/news/new" class="btn">Create First Article</a>
                            <% } %>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </section>

    <%- include('../partials/footer') %>

    <script src="/js/script.js"></script>
</body>
</html>
