<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="icon" href="/images/outsourced/LOGO.png" type="image/png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .event-detail {
            background-color: var(--white);
            border-radius: 8px;
            overflow: hidden;
            box-shadow: var(--shadow);
            margin-bottom: 40px;
        }
        .event-detail-image {
            height: 300px;
            overflow: hidden;
        }
        .event-detail-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        .event-detail-content {
            padding: 30px;
        }
        .event-meta {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            margin-bottom: 20px;
        }
        .event-meta-item {
            display: flex;
            align-items: center;
            color: var(--text-light);
        }
        .event-meta-item i {
            margin-right: 8px;
            color: var(--primary);
        }
        .event-description {
            margin-bottom: 30px;
            line-height: 1.7;
        }
        .event-actions {
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
        }
        .registration-status {
            background-color: #e9ecef;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
        }
        .registered-users {
            margin-top: 30px;
        }
        .registered-users h4 {
            margin-bottom: 15px;
            color: var(--primary);
        }
        .user-list {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }
        .user-item {
            background-color: var(--light);
            padding: 8px 12px;
            border-radius: 20px;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <%- include('../partials/header') %>

    <section class="section">
        <div class="container">
            <div class="event-detail">
                <div class="event-detail-image">
                    <img src="<%= event.image %>" alt="<%= event.title %>">
                </div>
                <div class="event-detail-content">
                    <h1><%= event.title %></h1>

                    <% if (event.video) { %>
                        <div class="event-video" style="margin-bottom: 20px;">
                            <h3>Event Video</h3>
                            <video controls style="width: 100%; max-height: 400px; border-radius: 8px;">
                                <source src="<%= event.video %>" type="video/mp4">
                                Your browser does not support the video tag.
                            </video>
                        </div>
                    <% } %>

                    <div class="event-meta">
                        <div class="event-meta-item">
                            <i class="fas fa-calendar"></i>
                            <%= new Date(event.date).toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %>
                        </div>
                        <div class="event-meta-item">
                            <i class="fas fa-map-marker-alt"></i>
                            <%= event.location %>
                        </div>
                        <div class="event-meta-item">
                            <i class="fas fa-tag"></i>
                            <%= event.category.charAt(0).toUpperCase() + event.category.slice(1) %>
                        </div>
                        <% if (event.capacity > 0) { %>
                            <div class="event-meta-item">
                                <i class="fas fa-users"></i>
                                <%= event.registeredUsers.length %> / <%= event.capacity %> registered
                            </div>
                        <% } else { %>
                            <div class="event-meta-item">
                                <i class="fas fa-users"></i>
                                <%= event.registeredUsers.length %> registered
                            </div>
                        <% } %>
                    </div>

                    <div class="event-description">
                        <%= event.description.replace(/\n/g, '<br>') %>
                    </div>

                    <% if (user) { %>
                        <% const isRegistered = event.registeredUsers.some(userId => userId.equals(user._id)); %>
                        <% if (isRegistered) { %>
                            <div class="registration-status" style="background-color: #d4edda; color: #155724;">
                                <i class="fas fa-check-circle"></i> You are registered for this event!
                            </div>
                        <% } else { %>
                            <% if (event.capacity === 0 || event.registeredUsers.length < event.capacity) { %>
                                <form action="/events/<%= event._id %>/register" method="POST" style="display: inline;">
                                    <button type="submit" class="btn btn-accent">Register for Event</button>
                                </form>
                            <% } else { %>
                                <div class="registration-status" style="background-color: #f8d7da; color: #721c24;">
                                    <i class="fas fa-exclamation-triangle"></i> This event is at full capacity.
                                </div>
                            <% } %>
                        <% } %>
                    <% } else { %>
                        <a href="/auth/login" class="btn btn-accent">Login to Register</a>
                    <% } %>

                    <div class="event-actions">
                        <a href="/events" class="btn">Back to Events</a>
                        <% if (user && user.role === 'admin') { %>
                            <a href="/events/admin/<%= event._id %>/edit" class="btn" style="background-color: #28a745;">Edit Event</a>
                            <form action="/events/admin/<%= event._id %>?_method=DELETE" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this event?')">
                                <button type="submit" class="btn" style="background-color: #dc3545;">Delete Event</button>
                            </form>
                        <% } %>
                    </div>

                    <% if (user && user.role === 'admin' && event.registeredUsers.length > 0) { %>
                        <div class="registered-users">
                            <h4>Registered Users (<%= event.registeredUsers.length %>)</h4>
                            <div class="user-list">
                                <% event.registeredUsers.forEach(registeredUser => { %>
                                    <div class="user-item">
                                        <%= registeredUser.name %> (<%= registeredUser.email %>)
                                    </div>
                                <% }) %>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </section>

    <%- include('../partials/footer') %>

    <script src="/js/script.js"></script>
</body>
</html>
